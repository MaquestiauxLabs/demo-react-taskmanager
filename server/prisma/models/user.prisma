// Represents a user in the system.
// | Field      | Type          | Description                |
// | ---------- | ------------- | -------------------------- |
// | id         | String (cuid) | Unique identifier          |
// | email      | String        | User's email (unique)      |
// | givenName  | String        | First name                 |
// | familyName | String        | Last name                  |
// | avatarUrl  | String?       | Optional avatar image URL  |
// | createdAt  | DateTime      | Account creation timestamp |
// | updatedAt  | DateTime      | Last update timestamp      |

model User {
  id         String     @id @unique @default(cuid())
  email      String     @unique /// @zod.email("Invalid email address")
  givenName  String     @db.VarChar(255) /// @zod.string().min(1, "Given name is required").max(255, "Given name must be at most 255 characters")
  familyName String     @db.VarChar(255) /// @zod.string().min(1, "Family name is required").max(255, "Family name must be at most 255 characters")
  avatarUrl  String? /// @zod.url("Invalid avatar URL").nullish()
  tasks      Task[]
  projects   Project[]
  labels     Label[]
  statuses   Status[]
  priorities Priority[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}
