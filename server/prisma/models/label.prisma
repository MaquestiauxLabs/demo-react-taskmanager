/// Represents a reusable label for task categorization.
///
/// @namespace Taxonomy
model Label {
  /// Label identifier (CUID).
  id        String    @id @default(cuid())
  /// Label display name.
  name      String
  /// Label color (hex code).
  color     String
  /// Owner user identifier (mapped to `ownerId`).
  creatorId String    @map("ownerId")
  /// Label owner.
  creator   User      @relation(fields: [creatorId], references: [id])
  /// Tasks associated with this label.
  tasks     Task[]    @relation("TaskLabels")
  /// Projects associated with this label.
  projects  Project[] @relation("ProjectLabels")
  /// Creation timestamp.
  createdAt DateTime  @default(now())
  /// Last update timestamp.
  updatedAt DateTime  @updatedAt
}
