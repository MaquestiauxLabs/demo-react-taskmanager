/// Represents a project that groups related tasks.
///
/// @namespace Work
/// @erd Overview
model Project {
  /// Project identifier (CUID).
  id          String    @id @default(cuid())
  /// Project title.
  title       String    @db.VarChar(255) /// @zod.string().min(1, "Title is required").max(255, "Title must be at most 255 characters")
  /// Optional project description.
  description String?   @db.VarChar(1000) /// @zod.string().max(1000, "Description must be at most 1000 characters").nullish()
  /// Owner user identifier (mapped to `ownerId`).
  creatorId   String    @map("ownerId")
  /// Project owner.
  creator     User      @relation(fields: [creatorId], references: [id])
  /// Tasks associated with this project.
  tasks       Task[]
  /// Optional project start date.
  startDate   DateTime?
  /// Optional project end date.
  endDate     DateTime?
  /// Priority identifier.
  priorityId  String?
  /// Task priority.
  priority    Priority? @relation(fields: [priorityId], references: [id])
  /// Status identifier.
  statusId    String?
  /// Task status.
  status      Status?   @relation(fields: [statusId], references: [id])
  /// Labels associated with this project.
  labels      Label[]   @relation("ProjectLabels")
  /// Creation timestamp.
  createdAt   DateTime  @default(now())
  /// Last update timestamp.
  updatedAt   DateTime  @updatedAt
}
