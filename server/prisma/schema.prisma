generator client {
  provider = "prisma-client"
  output   = "./generated"
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "./generated/zod"
}

generator erd {
  provider                  = "prisma-erd-generator"
  output                    = "../../docs/database-schema.svg"
  theme                     = "forest"
  includeRelationFromFields = true
}

datasource db {
  provider = "postgresql"
}
