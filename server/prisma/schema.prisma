generator client {
  provider = "prisma-client"
  output   = "./generated"
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "./generated/zod"
}

generator markdown {
  provider = "prisma-markdown"
  output   = "../../docs/database-schema.md"
  title    = "Task Manager Database Schema"
}

datasource db {
  provider = "postgresql"
}
